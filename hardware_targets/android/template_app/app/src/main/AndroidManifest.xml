<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nanogpt.executorch.template">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@android:drawable/sym_def_app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.NanoGPT">
        <activity
            android:name="com.nanogpt.executorch.template.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.nanogpt.executorch.template.NanoGptService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <receiver
            android:name="com.nanogpt.executorch.template.GenerationBroadcastReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.nanogpt.executorch.template.GENERATE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
