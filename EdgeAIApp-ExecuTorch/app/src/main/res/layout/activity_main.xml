<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EdgeAI Multi-Model Demo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLIP Vision + LLaMA Language Models"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#666666"
            android:layout_marginBottom="16dp" />

        <!-- Model Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Model:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/modelSelectionGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/clipModelRadio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CLIP Vision"
                android:checked="true" />

            <RadioButton
                android:id="@+id/llamaModelRadio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LLaMA Text" />

        </RadioGroup>

        <!-- CLIP Image Section -->
        <LinearLayout
            android:id="@+id/clipImageSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerInside"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="16dp"
                android:contentDescription="Selected image for CLIP inference" />

        </LinearLayout>

        <!-- LLaMA Text Input Section -->
        <LinearLayout
            android:id="@+id/llamaTextSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter your prompt:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/textInput"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="top|start"
                android:hint="Type your text prompt here..."
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="5"
                android:padding="12dp"
                android:background="@android:color/white"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Max Tokens:"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <SeekBar
                android:id="@+id/maxTokensSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="200"
                android:progress="100"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/maxTokensText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100 tokens"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <!-- CLIP Action Buttons -->
        <LinearLayout
            android:id="@+id/clipActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/captureButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“· Camera"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/galleryButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ–¼ï¸ Gallery"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- LLaMA Action Buttons -->
        <LinearLayout
            android:id="@+id/llamaActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/clearTextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ—‘ï¸ Clear"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/exampleButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ’¡ Example"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <Button
            android:id="@+id/inferenceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸš€ Run Inference"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Initializing models..."
                android:fontFamily="monospace"
                android:textSize="12sp"
                android:padding="8dp"
                android:background="@android:color/black"
                android:textColor="@android:color/white" />

        </ScrollView>

    </LinearLayout>

</ScrollView>